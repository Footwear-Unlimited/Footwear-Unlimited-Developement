      "type": "checkbox",
      "id": "show_timeline",
      "default": false,
      "label": "Display line below section content"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "number",
      "id": "desktop_top_padding",
      "label": "Desktop top padding (px)",
      "default": 80
    },
    {
      "type": "number",
      "id": "desktop_bottom_padding",
      "label": "Desktop bottom padding (px)",
      "default": 80
    },
    {
      "type": "number",
      "id": "mobile_top_padding",
      "label": "Mobile top padding (px)",
      "default": 50
    },
    {
      "type": "number",
      "id": "mobile_bottom_padding",
      "label": "Mobile bottom padding (px)",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Headline",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Headline"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#000000"
        },
        {
          "type": "select",
          "id": "text_size",
          "label": "Text size",
          "default": "frye-headline-2",
          "options": [
            {
              "value": "frye-headline-0",
              "label": "X-Large"
            },
            {
              "value": "frye-headline-1",
              "label": "Large"
            },
            {
              "value": "frye-headline-2",
              "label": "Medium"
            },
            {
              "value": "frye-headline-3",
              "label": "Small"
            },
            {
              "value": "frye-headline-4",
              "label": "X-Small"
            },
            {
              "value": "frye-headline-5",
              "label": "Tiny"
            },
            {
              "value": "frye-headline-6",
              "label": "Very Tiny"
            },
            {
              "value": "frye-headline-7",
              "label": "Custom 1"
            },
            {
              "value": "frye-headline-8",
              "label": "Custom 2"
            }
          ]
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Give customers details about the image or content on the template.</p>",
          "label": "Text"
        },
        {
          "type": "select",
          "id": "text_style",
          "label": "Text style",
          "default": "frye-body",
          "options": [
            {
              "value": "frye-body",
              "label": "Body - Default"
            },
            {
              "value": "frye-body-small",
              "label": "Body - Small"
            },
            {
              "value": "text-body-medium",
              "label": "Body - Medium"
            },
            {
              "value": "text-body-large",
              "label": "Body - Large"
            },
            {
              "value": "frye-eyebrow",
              "label": "Eyebrow - Small"
            },
            {
              "value": "frye-eyebrow-large",
              "label": "Eyebrow - Large"
            },
            {
              "value": "frye-pullquote",
              "label": "Pullquote"
            },
            {
              "value": "caption",
              "label": "Caption"
            }, {
              "value": "subtitle",
              "label": "Subtitle"
            }
          ]
        },
        {
          "type": "color",
          "id": "text_color",
