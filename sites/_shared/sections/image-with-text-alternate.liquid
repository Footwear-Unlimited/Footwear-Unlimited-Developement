      ]
    },
    {
      "type": "eyebrow",
      "name": "Eyebrow",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Eyebrow",
          "label": "Text"
        },
        {
          "type": "select",
          "id": "eyebrow_style",
          "label": "Eyebrow style",
          "default": "frye-eyebrow",
          "options": [
            {
              "value": "frye-eyebrow",
              "label": "Eyebrow - Small"
            },
            {
              "value": "frye-eyebrow-large",
              "label": "Eyebrow - Large"
            }
          ]
        },
        {
          "type": "color",
          "id": "text_color",
          "default": "#000000",
          "label": "Text color"
        }
      ]
    },
    {
      "type": "button",
      "name": "Buttons",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Button 1 options"
        },
