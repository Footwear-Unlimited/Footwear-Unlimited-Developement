{{ 'section-image-with-text-alternate.css' | asset_url | stylesheet_tag }}

<div class="image-with-text-alternate">
  <div class="image-with-text-alternate__background">

    {%- if section.settings.background_image != blank -%}
      <img srcset="
        {%- if section.settings.background_image.width >= 165 -%}{{ section.settings.background_image | img_url: '165x' }} 165w,{%- endif -%}
        {%- if section.settings.background_image.width >= 360 -%}{{ section.settings.background_image | img_url: '360x' }} 360w,{%- endif -%}
        {%- if section.settings.background_image.width >= 535 -%}{{ section.settings.background_image | img_url: '535x' }} 535w,{%- endif -%}
        {%- if section.settings.background_image.width >= 720 -%}{{ section.settings.background_image | img_url: '720x' }} 720w,{%- endif -%}
        {%- if section.settings.background_image.width >= 940 -%}{{ section.settings.background_image | img_url: '940x' }} 940w,{%- endif -%}
        {%- if section.settings.background_image.width >= 1070 -%}{{ section.settings.background_image | img_url: '1070x' }} 1070w,{%- endif -%}
        {%- if section.settings.background_image.width >= 1500 -%}{{ section.settings.background_image | img_url: '1500x' }} 1500w,{%- endif -%}
        {%- if section.settings.background_image.width >= 2200 -%}{{ section.settings.background_image | img_url: '2200x' }} 2200w{%- endif -%}"
        src="{{ section.settings.background_image | img_url: 'master' }}"
        alt="{{ section.settings.background_image.alt | escape }}"
        sizes="100vw"
        loading="lazy"
        width="{{ section.settings.background_image.width }}"
        height="{{ section.settings.background_image.height }}"
        class="small-hide"
      >
    {%- endif -%}

    {%- if section.settings.background_image_mobile != blank -%}
      <img srcset="
        {%- if section.settings.background_image_mobile.width >= 165 -%}{{ section.settings.background_image_mobile | img_url: '165x' }} 165w,{%- endif -%}
        {%- if section.settings.background_image_mobile.width >= 360 -%}{{ section.settings.background_image_mobile | img_url: '360x' }} 360w,{%- endif -%}
        {%- if section.settings.background_image_mobile.width >= 535 -%}{{ section.settings.background_image_mobile | img_url: '535x' }} 535w,{%- endif -%}
        {%- if section.settings.background_image_mobile.width >= 720 -%}{{ section.settings.background_image_mobile | img_url: '720x' }} 720w,{%- endif -%}
        {%- if section.settings.background_image_mobile.width >= 940 -%}{{ section.settings.background_image_mobile | img_url: '940x' }} 940w{%- endif -%}"
        src="{{ section.settings.background_image_mobile | img_url: 'master' }}"
        alt="{{ section.settings.background_image_mobile.alt | escape }}"
        sizes="100vw"
        loading="lazy"
        width="{{ section.settings.background_image_mobile.width }}"
        height="{{ section.settings.background_image_mobile.height }}"
        class="medium-hide large-up-hide"
      >
    {%- endif -%}
  </div>

  <div class="image-with-text-alternate__grid image-with-text-alternate__grid--img-padding-large {% if section.settings.layout == 'text_first' %} image-with-text-alternate__grid--reverse{% endif %} {% if section.settings.layout_mobile == 'text_first' %} image-with-text-alternate__grid--reverse--col{% endif %} grid grid--gapless grid--1-col grid--2-col-tablet">
    <div class="grid__item grid__item--padding-large grid__item--image-content">
      <div class="image-with-text-alternate__media {% if section.settings.image != blank %}media {% else %}image-with-text-alternate__media--placeholder placeholder{% endif %}"
        {% if section.settings.image != blank%} style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"{% endif %}
      >
        {%- if section.settings.image != blank and section.settings.image_mobile != blank -%}
          {% render 'image',
            image: section.settings.image,
            image_max_width: 1500,
            class: "image-with-text-alternate__image small-hide"
          %}

          {% render 'image',
            image: section.settings.image_mobile,
            image_max_width: 900,
            class: "image-with-text-alternate__image medium-hide large-up-hide"
          %}
        {%- elsif section.settings.image != blank -%}
          {% render 'image',
            image: section.settings.image,
            image_max_width: 1500
          %}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>

    <div class="grid__item grid__item--text-content">
      <div class="image-with-text-alternate__content image-with-text-alternate__content--adapt {{ section.settings.layout_mobile_width }}" style="background-color: {{ section.settings.content_background_color }};">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2 class="image-with-text-alternate__heading {{ block.settings.text_size }} headline" style="color: {{ block.settings.text_color }};" {{ block.shopify_attributes }}>
                {{ block.settings.text | escape }}
              </h2>

            {%- when 'eyebrow' -%}
              <div class="image-with-text-alternate__eyebrow {{ block.settings.eyebrow_style }}" style="color: {{ block.settings.text_color }};" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>

            {%- when 'description' -%}
              <div class="image-with-text-alternate__text {{ block.settings.text_style }}" style="color: {{ block.settings.text_color }};" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>

            {%- when 'padding' -%}
              {% render 'padding',
                id: block.id,
                mobile_padding_amount: block.settings.mobile_padding_amount,
                desktop_padding_amount: block.settings.desktop_padding_amount
              %}

            {%- when 'button' -%}
              <div class="image-with-text-alternate__button-wrapper {% if block.settings.show_side_by_side %}side-by-side{% endif %}" {{ block.shopify_attributes }} data-block-id="{{ block.id }}" id="block-section-{{ block.id }}">
              {%- if block.settings.button_label_1 != blank -%}
                  {% render 'button',
                    label: block.settings.button_label_1,
                    link: block.settings.button_link_1,
                    variation: block.settings.button_style_1,
                    arrow: block.settings.show_arrow_1,
                    class: "image-with-text-alternate__button"
                  %}
              {%- endif -%}

              {%- if block.settings.button_label_2 != blank -%}
                {% if block.settings.show_separator %}
                  <span class="image-with-text-alternate__button-separator">|</span>
                {% endif %}

                {% render 'button',
                  label: block.settings.button_label_2,
                  link: block.settings.button_link_2,
                  variation: block.settings.button_style_2,
                  arrow: block.settings.show_arrow_2,
                  class: "image-with-text-alternate__button"
                %}
              {%- endif -%}
              </div>

              {% assign block_selector = '#block-section-' | append: block.id %}
              {% style %}
              {{ block_selector }}.image-with-text-alternate__button-wrapper {
                {% if block.settings.show_side_by_side %}
                  flex-direction: row;
                  justify-content: space-between;
                {% endif %}
              }

              {{ block_selector }}.image-with-text-alternate__button-wrapper .image-with-text-alternate__button-separator {
                {% if block.settings.show_side_by_side %}
                  color: {{ block.settings.separator_color }};
                {% endif %}
              }
              {% endstyle %}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% assign section_selector = '#shopify-section-' | append: section.id %}
{% style %}
  {{ section_selector }} .image-with-text-alternate {
    background-color: {{ section.settings.background_color }};
  }

  @media screen and (max-width: 749px) {
    {{ section_selector }} .image-with-text-alternate {
      {%- if section.settings.mobile_top_padding -%}
        padding-top: {{ section.settings.mobile_top_padding }}px;
      {%- endif -%}
      {%- if section.settings.mobile_bottom_padding -%}
        padding-bottom: {{ section.settings.mobile_bottom_padding }}px;
      {%- endif -%}
    }
  }

  @media screen and (min-width: 750px) {
    {{ section_selector }} .image-with-text-alternate {
      {%- if section.settings.desktop_top_padding -%}
        padding-top: {{ section.settings.desktop_top_padding }}px;
      {%- endif -%}
      {%- if section.settings.desktop_bottom_padding -%}
        padding-bottom: {{ section.settings.desktop_bottom_padding }}px;
      {%- endif -%}
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Image with text alternate",
  "class": "section-image-with-text-alternate",
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Desktop background image",
      "info": "Covers full screen width."
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Mobile background image",
      "info": "Covers full screen width."
    },
    {
      "type": "header",
      "content": "Image area"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "4:3 recommended."
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image",
      "info": "4:3 recommended."
    },
    {
      "type": "header",
      "content": "Content options"
    },
    {
      "type": "color",
      "id": "content_background_color",
      "label": "Content area background color",
      "default": "#000"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "image_first",
          "label": "Image first"
        },
        {
          "value": "text_first",
          "label": "Text first"
        }
      ],
      "default": "image_first",
      "label": "Desktop layout options"
    },
    {
      "type": "select",
      "id": "layout_mobile",
      "options": [
        {
          "value": "image_first",
          "label": "Image first"
        },
        {
          "value": "text_first",
          "label": "Text first"
        }
      ],
      "default": "image_first",
      "label": "Mobile layout options"
    },
    {
      "type": "select",
      "id": "layout_mobile_width",
      "options": [
        {
          "value": "mobile-content-default",
          "label": "Content full width"
        },
        {
          "value": "mobile-content-narrow",
          "label": "Content narrow"
        }
      ],
      "default": "mobile-content-default",
      "label": "Mobile content options"
    },
    {
      "type": "header",
      "content": "Timeline options"
    },
